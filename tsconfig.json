{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "vue-eslint-parser",
      "mocha",
      "node"
    ],
    "outDir": ".temp",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/index.ts",
    "src/server.ts",
    "src/FileCounter.ts",
    "src/utils.ts",
    "types/index.d.ts"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
